@model ProgramWeb.Models.ViewModel.ProjectViewModel
<!-- Temporary page for testing of tables -->
@{
    ViewBag.Title = "Table testing (temp)";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>
<p><b>@Model.Name</b></p>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>File Name</th>
                <th>File Type</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.ProjectFiles)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.FileType</td>
                    <td>@item.Content</td>
                </tr>
            }
        </tbody>
    </table>

<ul>
    @foreach(var item in Model.ProjectUsers)
    {
        <li>@item</li>
    }
</ul>